# Produce Windows executables
# links with PDPCLIB created by makefile.msv

VPATH=./hashtab

CC=gccwin
CFLAGS=-O2
LD=ldwin
LDFLAGS=
AS=aswin
AR=arwin
COPTS=-S $(CFLAGS) -fno-common -ansi -I. -I./hashtab -I../pdpclib -D__WIN32__

all: clean pdmake.exe

pdmake.exe: main.o read.o variable.o xmalloc.o hashtab.o
  $(LD) $(LDFLAGS) -s -o pdmake.exe ../pdpclib/w32start.o main.o read.o variable.o xmalloc.o hashtab.o ../pdpclib/msvcrt.a

.c.o:
  $(CC) $(COPTS) -o $*.s $<
  $(AS) -o $@ $*.s
  rm -f $*.s

clean:
  rm -f *.o pdmake.exe
